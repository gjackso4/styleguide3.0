<%- include('../_layouts/admin_header') %>

<h2 class='page-title'>Pages</h2>
<a href="/admin/pages/add-page" class="btn btn-primary">Add a new page</a>
<br><br>

<table class="table table-striped">
  <thead>
    <tr class="home">
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% pages.forEach(function(page) { %>
      <tr id="id_<%= page._id%>" class="<%=page.slug%>">
        <td><%= page.title%></td>
        <td><a href="/admin/pages/edit-page/<%=page.slug%>">Edit</a></td>
        <%if(page.slug == 'homepage') { %>
          <td></td>
        <% } else { %>
          <td><a href="/admin/pages/delete-page/<%=page.slug%>">Delete</a></td>
        <% } %>
      </tr>
    <% }); %>
  </tbody>
</table>

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>
$('tbody').sortable({
  items: "tr:not('.homepage')",
  placeholder: "ui-state-highlight",
  update: function() {
     var ids = $('tbody').sortable('serialize');
     var url = "/admin/pages/reorder-page";

     $.post(url, ids);
  }
})
</script>

<%- include('../_layouts/admin_footer') %>
